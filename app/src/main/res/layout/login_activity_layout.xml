<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLogin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/logo_white"
        android:transitionName="ImagenLogo" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_round_green"
        android:text="Iniciar Sesion"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/btnLoginOtraCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_round_green"
        android:backgroundTint="@android:color/holo_green_light"
        android:padding="8dp"
        android:text="Iniciar con otra cuenta"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/txtInvitado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="No eres alumno de la UABC? "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <Button
        android:id="@+id/btnInvitado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_round_green"
        android:text="Invitado"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintEnd_toEndOf="@+id/txtInvitado"
        app:layout_constraintStart_toStartOf="@+id/txtInvitado"
        app:layout_constraintTop_toBottomOf="@+id/txtInvitado" />

</LinearLayout>